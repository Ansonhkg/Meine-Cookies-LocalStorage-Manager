{
  "manifest_version": 3,
  "name": "Meine Cookies & LocalStorage Manager",
  "version": "1.5",
  "description": "No bulls**t, no ads, nada - just import and export encrypted cookies and local storage data",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "downloads",
    "activeTab",
    "scripting"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "biscuit_icon_128.png"
    }
  },
  "icons": {
    "128": "biscuit_icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
